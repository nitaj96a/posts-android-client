<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_commenter_thumb"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/textView_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_commenter_thumb"
        android:layout_margin="8dp"/>




    <TextView
        android:id="@+id/textView_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_commenter_thumb"
        android:layout_below="@id/textView_comment"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/textView_like_dislike_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textView_comment"

        android:layout_margin="8dp"/>

</RelativeLayout >